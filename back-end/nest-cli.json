{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "watchAssets": true,
        "deleteOutDir": true
    },
    "watchOptions": {
        "poll": 800,
        "ignored": ["**/node_modules/**", "**/.git/**", "**/dist/**"]
    }
}
